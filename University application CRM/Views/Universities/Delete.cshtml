@model Speciality
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h1 class="alert-danger">Are you sure you want to delete this Speciality?</h1>

<form method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <button type="submit" class="btn btn-danger" asp-controller="Specialities" asp-action="Delete">Yes</button>
    <button class="btn btn-success" asp-controller="Specialities" asp-action="Index" asp-route-id="@Model.StudyFieldId">No</button>
</form>

