@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<form method="post">
  <div class="mb-3">
    <label asp-for="UserName" class="form-label"></label>
    <input class="form-control" asp-for="UserName">
    <span asp-validation-for="UserName" class="form-text"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Password" class="form-label">Password</label>
    <input type="password" class="form-control" asp-for="Password">
  </div>
  <div class="mb-3 form-check">
    <input type="checkbox" class="form-check-input" asp-for="RememberMe">
    <label class="form-check-label" asp-for="RememberMe"></label>
  </div>
  <button type="submit" class="btn btn-primary" asp-controller="home" asp-action="login">Login</button>
</form>