@model Speciality
@{
    ViewData["Title"] = "Create";
}

<h1>Add new Speciality</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Name_en" class="form-label"></label>
        <input class="form-control" asp-for="Name_en">
    </div>
    <div class="mb-3">
        <label asp-for="Name_fa" class="form-label"></label>
        <input class="form-control" asp-for="Name_fa">
    </div>
    <input type="hidden" asp-for="StudyFieldId" value="@Model.StudyFieldId"/>
    <button type="submit" class="btn btn-success" asp-controller="Specialities" asp-action="Create">Add</button>
</form>
