@model City
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h1 class="alert-danger">Are you sure you want to delete this City?</h1>

<form method="post">
    <button class="btn btn-danger" asp-controller="Cities" asp-action="Delete" asp-route-id="@Model.Id">Yes</button>
    <button class="btn btn-success" asp-controller="Cities" asp-action="Index">No</button>
</form>
