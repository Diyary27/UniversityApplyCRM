@model Country
@{
    ViewData["Title"] = "Create";
}

<h1>Add new Country</h1>

<form method="post">
  <div class="mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input class="form-control" asp-for="Name">
  </div>
  <button type="submit" class="btn btn-success" asp-controller="Countries" asp-action="Create">Add</button>
</form>
